<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_bar_color"
        app:title="Profile"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/arrow_back"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/avatarCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/avatar_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/avatarInitialsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/user_profile_avatar"
                    android:textColor="@color/primary_color"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:text="@string/user_name"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/avatarCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/personalInfoHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/personal_info_header"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/userNameTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/fullNameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/card_background"
                app:contentPadding="16dp"
                app:layout_constraintTop_toBottomOf="@id/personalInfoHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fullNameIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/person"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        app:tint="@color/text_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/fullNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/full_name_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/fullNameIcon"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/fullNameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/full_name"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/fullNameLabel"
                        app:layout_constraintTop_toBottomOf="@id/fullNameLabel"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/usernameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/card_background"
                app:contentPadding="16dp"
                app:layout_constraintTop_toBottomOf="@id/fullNameCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/usernameIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/email"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        app:tint="@color/text_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/usernameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/usernameIcon"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/usernameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/username"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/usernameLabel"
                        app:layout_constraintTop_toBottomOf="@id/usernameLabel"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/emailCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/card_background"
                app:contentPadding="16dp"
                app:layout_constraintTop_toBottomOf="@id/usernameCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/emailIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/envelop"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        app:tint="@color/text_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/emailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/emailIcon"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/emailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/email"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/emailLabel"
                        app:layout_constraintTop_toBottomOf="@id/emailLabel"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/privacySecurityHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/privacy_and_security_header"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/emailCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/passwordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/card_background"
                app:contentPadding="16dp"
                app:layout_constraintTop_toBottomOf="@id/privacySecurityHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/passwordIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/security"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        app:tint="@color/text_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/passwordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/passwordIcon"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/passwordValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/password_changed_time"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/passwordLabel"
                        app:layout_constraintTop_toBottomOf="@id/passwordLabel"/>

                    <ImageView
                        android:id="@+id/passwordArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/chevron_right"
                        app:tint="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/deleteAccountButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/delete_account"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/negative_button_color"
                app:layout_constraintTop_toBottomOf="@id/passwordCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/developer_info_concept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer_concept"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/deleteAccountButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/developer_info_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer_dept"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/developer_info_concept"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/developer_info_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer_faculty"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/developer_info_dept"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/developer_info_faculty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>